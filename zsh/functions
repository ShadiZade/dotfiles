function open-newsletter {
    loc="$HOME/Documents/newsletters"
    nlname="$(eza -1D "$loc" | fzf)"
    [[ -z "$nlname" ]] && return
    nlfile="$(eza -1f --sort=name "$loc"/"$nlname" | grep "pdf$" | tail -n 1)"
    echolor green ":: Opened newsletter ‚Äú‚Äú${nlfile%'.'*}‚Äù‚Äù"
    sioyek "$loc"/"$nlname"/"$nlfile" 2>/dev/null >/dev/null
}

function unread-newsletter {
    loc="$HOME/Documents/newsletters"
    ufile="$usdd/unread-newsletters"
    [[ -z "$(cat "$ufile")" ]] && {
	echolor yellow ":: No unread newsletters."
	return
    }
    nlfile="$(cat "$ufile" | awk -F '/' '{print $NF}' | awk -F '.' '{print $1}' | fzf)"
    [[ -z "$nlfile" ]] && return
    nlfilefull="$(grep "${nlfile}.pdf$" "$ufile")"
    echolor green ":: Opened newsletter ‚Äú‚Äú$nlfile‚Äù‚Äù"
    sioyek "$nlfilefull" 2>/dev/null >/dev/null
    echolor yellow ":: Remove ‚Äú‚Äú$nlfile‚Äù‚Äù from unread? (Y/n) " 1
    read -r remove_from_unread_p
    [[ "$remove_from_unread_p" = "n" ]] && {
	echolor red ":: ‚Äú‚Äú$nlfile‚Äù‚Äù not removed."
    } || {
	sed -i "s|$nlfilefull||;/^$/d" "$ufile" && \
	    echolor green ":: ‚Äú‚Äú$nlfile‚Äù‚Äù removed."
    }
}

function ws {
    [[ -z "$1" ]] && {
	wifi-connected-p
	echolor purple-yellow ":: Network: ‚Äú‚Äú$DEFAULT_WIFI_NETWORK‚Äù‚Äù\n:: Password: ‚Äú‚Äú$DEFAULT_WIFI_PASSWORD‚Äù‚Äù"
	wifi-connected-p && {
	    echolor green ":: Currently connected to ‚Äú‚Äú$(nmcli device status | grep '^wlan0' | awk '{print $4}')‚Äù‚Äù"
	}
	echolor yellow ":: Reset to default? (y/N) " 1
	reset_p="n"
	read -r reset_p
	[[ "$reset_p" = "y" ]] && {
	    source ~/Repositories/private/wifi-creds.sh
	    echolor green ":: Default network reset to ‚Äú‚Äú$DEFAULT_WIFI_NETWORK‚Äù‚Äù"
	}
	return
    }
    export DEFAULT_WIFI_NETWORK="$1"
    export DEFAULT_WIFI_PASSWORD="$2"
    echolor green ":: Default network for netc command defined as ‚Äú‚Äú$1‚Äù‚Äù"
    [[ -z "$2" ]] && {
	export DEFAULT_WIFI_PASSWORD=''
	echolor yellow ":: Network was defined without a password."
    }
}

function all-colors {
    IFS=$'\n'
    for j in $(xsv select -n 1,2 "$usdd"/echolors.csv)
    do
	local color_name="$(awk -F ',' '{print $1}' <<< "$j")"
	local color_code="$(awk -F ',' '{print $2}' <<< "$j")"
	 echolor "$color_name" ":: $color_name $(tput cup 28 18) $color_code $(tput cup 28 37) ‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé‚àé"
    done
    unset IFS
}

random-file () {
    random_files=()
    until [[ "${#random_files[@]}" -ge ${2:-1} ]]
    do
	[[ "$(fd -d 1 "$1" | wc -l)" -eq 0 ]] && return
	random_files+="$(fd -i -d 1 "$1" | sed -n "$(($(random-number 5) % $(fd -d 1 "$1" | wc -l) + 1))"p)"
    done
    echo ${random_files[@]}
}

function sl {
    [[ ! -z "$3" ]] && {
	echolor red ":: Error: more than two arguments!"
	return 1
    }
    [[ ! -e "$(realpath -- "$1")" ]] && {
	echolor red ":: ‚Äú‚Äú$(realpath -- $1)‚Äù‚Äù does not exist!"
	return 1
    }
    echolor purple-aquamarine ":: Linking ‚Äú‚Äú$(realpath -- "$1")‚Äù‚Äù"
    echolor purple-aquamarine ":: To ‚Äú‚Äú$(realpath -- "${2:-.}")‚Äù‚Äù"
    ln -s "$(realpath -- "$1")" "$(realpath -- "${2:-.}")"
}
