function last-updated {
    lud="$(datediff -f %d $(tac /var/log/pacman.log | grep -m 1 'full system upgrade' | awk -F 'T' '{print $1}' | tr -d '[') $(date +"%Y-%m-%d"))"
    [[ "$lud" -lt 3 ]] && return
    echolor beige-blue ":: System was last updated ‚Äú‚Äú$lud‚Äù‚Äù days ago."
}

function last-back-caravan {
    caravan_log_dir="$HOME/.local/logs/caravan"
    lcb="$(datediff -f %d $(stat -c '%w' "$caravan_log_dir"/"$(eza -1fX --sort=newest "$caravan_log_dir" | tail -n 1)" | awk '{print $1}') $(date +"%Y-%m-%d"))"
    [[ "$lcb" -lt 3 ]] && return
    echolor beige-blue ":: System was last backed ‚Äú‚Äú$lcb‚Äù‚Äù days ago."
}

function last-back-mobile {
    backmobile_log_file="$HOME/.local/logs/backmobile/backmobile-times"
    lbm="$(datediff -f %d $(tail -n 1 "$backmobile_log_file" | awk '{print $1}') $(date +"%Y-%m-%d"))"
    [[ "$lbm" -lt 3 ]] && return
    echolor beige-blue ":: Mobile was last backed ‚Äú‚Äú$lbm‚Äù‚Äù days ago."
}

function enzh {
    command trans -b en:zh "$1" | tee /tmp/chinesetranslation
    pypinyin < /tmp/chinesetranslation
}

function zhen {
    pypinyin "$1"
    command trans -b zh:en "$1"
}

function glyph {
    codepoint=''
    echo "$1" | grep -qi "^U+" && codepoint="${1#*+}"
    [[ -z "$codepoint" ]] && {
	codepoint="$(echo -n "$1" | iconv -f utf8 -t utf32be | xxd -p | sed -E 's/^0+//g')"
	echolor blue-beige ":: ‚Äú‚Äú$1‚Äù‚Äù is ‚Äú‚ÄúU+$codepoint‚Äù‚Äù"
    }
    fc-list :charset="$codepoint" | awk -F ':' '{print $2}' | awk -F ',' '{print $1}' | sort | uniq
}
    
function find-font {
    fc-list | grep -i "$1" | awk -F ': ' '{print $2}' | sort | uniq
}

function pp {
    tmpfile="/tmp/$(random-string)"
    pypinyin "$@" | tee "$tmpfile"
    sed '/^$/d' "$tmpfile" | tr -d '\n' | xclip -selection clipboard
}

function display-unread-arch-news {
    [[ -z "$(cat "$usdd/latest-arch-news-title")" ]] && return 1
    echolor beige ":: Unread Arch News!"
    echolor blue "   ‚Äú$(cat $usdd/latest-arch-news-title)‚Äù"
}
    
function memuse {
    local rootdisk="$(df -h --sync | grep " /$")"
    echolor aquamarine-beige ":: ‚Äú‚Äú$(echo $rootdisk | awk '{print $5}')‚Äù‚Äù of disk space on " 1
    echolor aquamarine-beige "‚Äú‚Äú$(echo $rootdisk | awk '{print $1}')‚Äù‚Äù is used " 1
    echolor aquamarine-beige "(‚Äú‚Äú$(echo $rootdisk | awk '{print $3}')‚Äù‚Äù out of " 1
    echolor aquamarine-beige "‚Äú‚Äú$(echo $rootdisk | awk '{print $2}')‚Äù‚Äù)"
}

function reading-stats {
    [[ ! -d "$HOME/Projects/reading/" ]] && echolor mintgreen-violet "‚Äú‚Äú::‚Äù‚Äù No reading directory found."
    local tbr100_number="$(fd . ~/Projects/reading/tbr/tbr-100/ | wc -l)"
    [[ "$tbr100_number" -gt 100 ]] && local tbr100_number="$(echolor red "$tbr100_number")"
    local tbr20_number="$(fd . ~/Projects/reading/tbr/tbr-20/ | wc -l)"
    [[ "$tbr20_number" -gt 20 ]] && local tbr20_number="$(echolor red "$tbr20_number")"
    local tbr5_number="$(fd . ~/Projects/reading/tbr/tbr-5/ | wc -l)"
    [[ "$tbr5_number" -gt 5 ]] && local tbr5_number="$(echolor red "$tbr5_number")"
    local readingnow_number="$(fd -d 1 -t l -t f . ~/Projects/reading/ | wc -l)"
    [[ "$readingnow_number" -gt 6 ]] && local readingnow_number="$(echolor red "$readingnow_number")"
    local done_number="$(fd . ~/Projects/reading/done/$(date +%Y) | wc -l)"
    [[ "$done_number" -eq 0 ]] && local done_number="$(echolor red "$done_number")"
    echolor mintgreen-violet "Reading statistics: ‚Äú‚ÄúTBR‚Äù‚Äù $tbr100_number‚Äú‚Äú/‚Äù‚Äù$tbr20_number‚Äú‚Äú/‚Äù‚Äù$tbr5_number ‚Äú‚ÄúNOW‚Äù‚Äù $readingnow_number ‚Äú‚ÄúDONE‚Äù‚Äù $done_number"
}

function zap-to-directory {
    zap_before="$(realpath -- .)"
    [[ -z "$1" ]] && {
	case "$(fd -t d . | wc -l)" in
	    "1") zap_after="$(realpath -- "$(fd -t d .)")"
		 cd "$zap_after"
		 echolor violet-beige ":: One subdirectory detected\n:: Zapped from ‚Äú‚Äú$zap_before‚Äù‚Äù\n:: Zapped to   ‚Äú‚Äú$zap_after‚Äù‚Äù"
		 return 0 ;;
	    "0") echolor violet-beige ":: No subdirectories found."
		 echolor violet-beige ":: Nothing done."
		 return 1 ;;
	    *)   echolor violet-beige ":: Found more than one subdirectory.\n‚Äú‚Äú$(fd -d 1 -t d .)‚Äù‚Äù"
		 echolor violet-beige ":: Nothing done."
		 return 1 ;;
	esac
	}
    case "$(fd -t d -- "$1" . | wc -l)" in
	"1") zap_after="$(realpath "$(fd -t d -- "$1" .)")"
	     cd "$zap_after"
	     echolor violet-beige ":: Found term  ‚Äú‚Äú$1‚Äù‚Äù\n:: Zapped from ‚Äú‚Äú$zap_before‚Äù‚Äù\n:: Zapped to   ‚Äú‚Äú$zap_after‚Äù‚Äù"
	     return 0 ;;
	"0") echolor violet-beige ":: Term ‚Äú‚Äú$1‚Äù‚Äù not found."
	     echolor violet-beige ":: Nothing done."
	     return 1 ;;
	*)  [[ "$(fd -t d "^$1$" . | wc -l)" -eq 1 ]] && {
		zap_after="$(realpath "$(fd -t d -- "^$1$" .)")"
		echolor violet-beige ":: Found exact term ‚Äú‚Äú$1‚Äù‚Äù\n:: Zapped from ‚Äú‚Äú$zap_before‚Äù‚Äù\n:: Zapped to   ‚Äú‚Äú$zap_after‚Äù‚Äù"
		echolor violet-beige ":: However, other less-exact terms were also found\n‚Äú‚Äú$(fd -t d -- "$1" .)‚Äù‚Äù"
		cd "$zap_after"
		return 0
	    }
	    [[ "$(fd -t d "^$1$" . | wc -l)" -gt 1 ]] && {
		echolor violet-beige ":: Found exact term ‚Äú‚Äú$1‚Äù‚Äù more than once.\n‚Äú‚Äú$(fd -t d "^$1$" .)‚Äù‚Äù"
		echolor violet-beige ":: Nothing done."
		return 1
	    }
	    echolor violet-beige ":: Found term ‚Äú‚Äú$1‚Äù‚Äù more than once.\n‚Äú‚Äú$(fd -t d -- "$1" .)‚Äù‚Äù"
	    echolor violet-beige ":: Nothing done."
	    return 1 ;;
    esac
}

function mvk {
    [[ -z "$1" ]] && return 1
    [[ ! -e "$1" ]] && {
	echolor red ":: File ‚Äú‚Äú$1‚Äù‚Äù not found."
	return 1
    }
    local fname="$1"
    local ext="${fname##*.}"
    case "$2" in
	'.'|'') nname="$(basename "${fname%.*}")" ;;
	*)      nname="$2" ;;
    esac
    [[ -z "$nname" ]] && return 1
    [[ -n "$ext" ]] && local ext=".$ext"
    grep -q '\.' <<< "$fname" || local ext=''
    [[ -e "$(kebab "$nname")$ext" ]] && {
	echolor red ":: ‚Äú‚Äú$(kebab "$nname")$ext‚Äù‚Äù already exists here."
	return 1
    }
    [[ -z "$ext"  ]] && ext="$(extension-determiner "$fname")"
    mv -vn "$fname" "$(kebab "$nname")$ext" || return 1
    echolor purple-aquamarine ":: From ‚Äú‚Äú$fname‚Äù‚Äù\n:: Into ‚Äú‚Äú$(kebab "$nname")$ext‚Äù‚Äù"
}


function mva {
    fd -q "^aaa" "$HOME/Downloads/" || {
	echolor red ":: No file beginning with ‚Äúaaa‚Äù was found in ~/Downloads"
	return 1
    }
    mvk "$HOME/Downloads/aaa"* "${@:-.}"
}

function rl {
    # remove symlinks safely
    [[ -z "$@" ]] && {
	echolor red ":: No arguments found."
	return 1
    }
    [[ "${#@}" -ge 3 ]] && {
	echolor yellow ":: About to remove ‚Äú‚Äú${#@}‚Äù‚Äù symlinks. (press <return> to continue) " 1
	read
    }
    for j in "${@}"
    do
	[[ ! -e "$j" ]] && {
	    echolor red ":: File ‚Äú‚Äú$j‚Äù‚Äù does not exist."
	    return 1
	}
	[[ "$(stat -c '%F' "$j")" != "symbolic link" ]] && {
	    echolor red ":: File ‚Äú‚Äú$j‚Äù‚Äù is not a symlink."
	    return 1
	}
	echolor yellow ":: Removing symlink ‚Äú‚Äú$(realpath -s -- "$j")‚Äù‚Äù"
	echolor yellow-liteorange "             Target ‚Äú‚Äú$(realpath -P -- "$j")‚Äù‚Äù"
	rm -I "$j" >/dev/null && echolor green "      ‚úì Done."
    done
}

horizontal-line () {
    local hl_inpattern="$(echo -n "${1:-‚Äî}" | wc -m)"
    local hl_chars="$(($(tput cols) / $hl_inpattern))"
    local hl_iterations="$((${2:-0} / $hl_inpattern))"
    local hl_remainder="$(((${2:-0} % $hl_inpattern) - 1))"
    for j in {1..$((hl_chars - hl_iterations))}
    do
	echo -n "${1-‚Äî}"
    done
    echo -e "\033[${hl_remainder}D\033[K"
}

function ytv {
    yt-dlp                                                                               \
	-f 'bestvideo[height=1080][ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best'       \
	--fragment-retries infinite                                                      \
	--no-mtime                                                                       \
	--embed-chapters                                                                 \
	--embed-subs                                                                     \
	--sub-langs en,-live_chat                                                        \
	"$@"
}

function ytvr {
    yt-dlp                                                                               \
	-f 'bestvideo[height=1080][ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best'       \
	--fragment-retries infinite                                                      \
	--no-mtime                                                                       \
	--embed-chapters                                                                 \
	--embed-subs                                                                     \
	--sub-langs en,-live_chat                                                        \
	--sponsorblock-remove all                                                        \
	"$@"
}

function ytm {
    yt-dlp                               \
	--fragment-retries infinite      \
	--format bestaudio               \
	--no-mtime                       \
	--extract-audio                  \
	--audio-format mp3               \
	"$@"
}


function ytmr {
